    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "C_Cpp.formatting": "vcFormat",
    "editor.tabSize": 4, // 设置制表符或空格的大小
    "editor.insertSpaces": true, // 将制表符转换为空格
    "editor.defaultFormatter": "ms-vscode.cpptools", // 使用 C/C++ 扩展的格式化工具
    "editor.autoIndent": "full", // 启用自动缩进
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: WebKit, IndentWidth: 4, ColumnLimit: 100 }", // 使用 Google 风格作为默认风格
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "code-runner.executorMap": {
    "cpp": "cd $dir && g++ *.cpp -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
},
"cmake.configureOnOpen": true,
    
}